<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:contentDescription="@null"
        app:srcCompat="?attr/homeAsUpIndicator"

        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="-37dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Создать аккаунт"
        android:textColor="#1a1a1a"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="288dp"
        android:layout_height="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Электронная почта"
        android:textColor="#1a1a1a"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="372dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:background="@drawable/roundrect"
        android:ems="10"
        android:hint="Введите электронную почту"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Придумайте пароль"
        android:textColor="#1a1a1a"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/password"
            android:layout_width="371dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:background="@drawable/roundrect"
            android:ems="10"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Повторите пароль"
        android:textColor="#1a1a1a"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/password2"
            android:layout_width="371dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:background="@drawable/roundrect"
            android:ems="10"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Я согласен с условиями обслуживания и политикой конфиденциальности"
        android:textColor="#1a1a1a"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNext"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:backgroundTint="#2A1246"
        android:fontFamily="@font/montserrat_medium"
        android:text="Далее"
        android:textColor="@color/white"
        app:cornerRadius="8dp" />

</LinearLayout>
